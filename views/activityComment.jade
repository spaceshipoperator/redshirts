script
  $('document').ready(function(){
      $("#comment").validate({
          rules: {
              "commentNew[comment]": "required"
          },
          messages: {
              "commentNew[comment]": "please provide a comment"
          }
      });
  });

h2(class="title")= title

div#messages
  p= error

  form#comment(method="post")
    input(type="submit", value="submit")
    input(name="commentNew[activity_id]", value=activity.id, type="hidden")
    input(name="commentNew[user_id]", value=user.id, type="hidden")
    table      
      tr
        td
          label comment:
      tr
        td
          textarea(name="commentNew[comment]", rows=10, cols=45)
